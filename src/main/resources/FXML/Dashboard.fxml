<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.store.pantastoreapp.controllers.DashboardController">
    <!-- Top bar: Welcome label left, spacer, avatar right -->
    <top>
        <HBox spacing="12" style="-fx-background-color: linear-gradient(#2C3E50, #34495E); -fx-padding: 12; -fx-alignment: CENTER_LEFT;">
            <children>
                  <Label fx:id="welcomeLabel" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: 600;" text="Welcome, User" />

                <Region HBox.hgrow="ALWAYS" />

                <StackPane style="-fx-alignment: center-right;">
                </StackPane>
            </children>
        </HBox>
    </top>

    <!-- Center: charts on top, table below -->
    <center>
        <VBox spacing="12" style="-fx-padding: 16; -fx-background-color: #f6f8fa;">
            <children>
                <!-- Charts area: two charts side by side -->
                <GridPane hgap="12" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="60" />
                        <ColumnConstraints percentWidth="40" />
                    </columnConstraints>

                    <!-- Line Chart (top sold items frequency) -->
                    <children>
                        <LineChart fx:id="lineChart" prefHeight="300" title="Top 10 Items - Sales Over Time" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <xAxis>
                                <CategoryAxis fx:id="lineXAxis" label="Period" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="lineYAxis" label="Units Sold" />
                            </yAxis>
                        </LineChart>

                        <!-- Bar Chart (low inventory) -->
                        <BarChart fx:id="barChart" prefHeight="300" title="Low Inventory" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <xAxis>
                                <CategoryAxis fx:id="barXAxis" label="Item" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="barYAxis" label="Quantity Left" />
                            </yAxis>
                        </BarChart>
                    </children>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <!-- Controls above the table -->
                <HBox spacing="8" style="-fx-padding: 8 0 8 0; -fx-alignment: CENTER_LEFT;">
                    <children>
                        <Button fx:id="addItemBtn" text="Add Item" />
                        <Button fx:id="logSaleBtn" text="Log Sale" />
                        <Separator orientation="VERTICAL" />
                        <TextField fx:id="searchField" promptText="Search items..." />
                        <Button fx:id="searchBtn" text="Search" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="refreshBtn" text="Refresh" />
                    </children>
                </HBox>

                <!-- Table: spreadsheet like -->
                <TableView fx:id="productTable" prefHeight="300.0" style="-fx-border-color: #e0e0e0; -fx-border-radius: 6; -fx-background-radius: 6;">
                    <columns>
                        <TableColumn fx:id="colSku" prefWidth="120" text="SKU" />
                        <TableColumn fx:id="colName" prefWidth="220" text="Name" />
                        <TableColumn fx:id="colCategory" prefWidth="120" text="Category" />
                        <TableColumn fx:id="colPrice" prefWidth="90" text="Price" />
                        <TableColumn fx:id="colQuantity" prefWidth="90" text="Quantity" />
                        <TableColumn fx:id="colReorder" prefWidth="110" text="Reorder Level" />
                        <TableColumn fx:id="colActions" prefWidth="160" text="Actions" />
                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>
</BorderPane>
